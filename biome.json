{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"turbo/**/*",
			"packages/**/*",
			"packages/**/src/**/*",
			"packages/**/examples/**/*"
		],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							[
								":URL:",
								":NODE:",
								":BUN:"
							],
							":BLANK_LINE:",
							[
								":PACKAGE:",
								":PACKAGE_WITH_PROTOCOL:"
							],
							":BLANK_LINE:",
							[
								":ALIAS:"
							],
							":BLANK_LINE:",
							[
								":PATH:"
							]
						]
					}
				}
			}
		}
	}
}
