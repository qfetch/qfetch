{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["check-types", "test", "^build"],
			"outputs": ["dist/**"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"style": {
			"dependsOn": ["^style"]
		},
		"test": {
			"dependsOn": ["^test"]
		}
	}
}
